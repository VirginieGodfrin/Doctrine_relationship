{% extends "AppBundle::layout.html.twig" %}

{% block event %}

	{% if is_granted('ROLE_USER') %}
                <li><a href="{{path('Logout') }}"> Logout </a></li>
    {% endif %}

	<h2>Events</h2>
	{% for e in events %}
	<ul>
		<li>Name : {{e.name}}</li>
		<li>Description : {{e.description}} </li>
		<li>Bands : </li>
			<ul>
			 	{% for b in e.bands %}
					<li>{{b.name}}</li>
				{% endfor %}
			</ul>
		<li>
			<a href="{{path('Event_ville',{'name': e.concertHall.name}) }}">{{e.concertHall.name}}</a>
		</li>

		<li>Participants : 
			<ol>
				{% for u in e.users %}
					<li>
						<a href="{{path('user_view',{'name': u.name}) }}">{{u.name}}</a>
					</li>
					 
				{% endfor %}
			</ol>
		</li>
		<li>Date : {{e.stratTime|date('m-d-Y')}}</li>
		<li>DÃ©but : {{e.stratTime|date('H:i:s a')}}</li>
		<li>Fin : {{e.endTime|date('m-d-Y H:i:s a')}}</li>
	</ul>
	<hr>
	{% endfor %}

{% endblock %}
