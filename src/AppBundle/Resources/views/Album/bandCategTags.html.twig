{% extends "AppBundle::layout.html.twig" %}

{% block bandCateg %}

		

{{ dump(bandCateg) }}

{{ dump(bandTags) }}

		<ul> bands via categories : 
			<li>category id : {{bandCateg.id}}</li>
			<li>category name: {{bandCateg.name}}</li>
			<li>band associé : {{bandCateg.band.name}}</li>
			<ul>catégories associées :
				{% for c in bandCateg.band.categories %}
