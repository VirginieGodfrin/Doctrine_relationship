					<li>{{t.id}}</li>
				<a href="{{path('Album_view_band_tags',{'id': t.id}) }}"> 
					tags de {{t.name}}</a>
					
				{% endfor %}
			</ul>
		</ul>

		<hr>

		<ul> bands via tags 
			<li>tags id : {{bandTags.id}}</li>
			<li>tags name : {{bandTags.name}}</li>
				<ul> bands associés :
					{% for b in bandTags.band %}
						<li>{{b.name}}</li>
					{% endfor %}
				<ul>
		</ul>

		


		
	

	{% endblock %}